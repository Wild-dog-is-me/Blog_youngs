<div class="trm-content-start">

    <!-- banner -->
    <%- partial('./_partial/banner', {
        ...theme.banner.default,
        bannerTitle: page.title,
        ...theme.banner.about 
    }) %>
    <!-- banner end -->

    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <!-- main card -->
                <%- partial('./_partial/sidebar') %>
                <!-- main card end -->
            </div>
            <div class="col-lg-8">
                <!-- content -->
                <div class="trm-content" id="trm-content">
                    <div data-scroll data-scroll-repeat data-scroll-offset="500" id="about-triger"></div>
                    
                    <% if(page.content){ %>
                        <%- page.content %>
                    <% }else{ %>
                        <div class="row trm-mb-40 trm-scroll-animation" data-scroll data-scroll-offset="40">
                            <div class="col-lg-12">
                                <blockquote>
                                    <%- theme.about.title %>
                                </blockquote>
                            </div>
                        </div>
                        
                        <div class="row trm-mb-20 trm-scroll-animation" data-scroll data-scroll-offset="40">
                            <div class="col-lg-12">
                                <h5 class="trm-mb-40 trm-title-with-divider">
                                    <%- __('title.author') %>
                                    <span data-number="01"></span>
                                </h5>
                                <div class="trm-service-icon-box trm-contrast trm-active-el" >
                                    <%- theme.about.introduction %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row trm-mb-20 trm-scroll-animation" data-scroll data-scroll-offset="40">
                            <div class="col-lg-12">
                                <h5 class="trm-mb-40 trm-title-with-divider">
                                    <%- __('title.blog') %>
                                    <span data-number="02"></span>
                                </h5>
                                <div class="trm-service-icon-box trm-active-el">
                                    <%- theme.about.blog %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row trm-mb-20 trm-scroll-animation" data-scroll data-scroll-offset="40">
                            <div class="col-lg-12">
                                <h5 class="trm-mb-40 trm-title-with-divider">
                                    <%- __('title.privacy') %>
                                    <span data-number="03"></span>
                                </h5>
                                <div class="trm-service-icon-box trm-active-el">
                                    <%- theme.about.privacy %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <div class="trm-divider trm-mb-40"></div>

                    <!-- footer -->
                    <%- partial('./_partial/footer') %>
                    <!-- footer end -->
                </div>
                <!-- content end -->
            </div>
        </div>
    </div>
</div>